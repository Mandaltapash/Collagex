<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyAdsActivity"
    android:backgroundTint="@color/custom_gray_bc">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/my_adds_fab_layout_margin_end_button"
        android:layout_marginBottom="@dimen/my_adds_fab_layout_margin_end_button"
        android:clickable="true"
        android:elevation="@dimen/my_adds_fab_elevation"
        app:backgroundTint="@color/custom_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_white_24"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMyAds"
        android:layout_width="@dimen/my_adds_recycler_view_layout_width"
        android:layout_height="@dimen/my_adds_recycler_view_layout_height"
        android:layout_marginStart="@dimen/my_adds_recycler_view_layout_margin"
        android:layout_marginTop="@dimen/my_adds_recycler_view_layout_margin"
        android:layout_marginEnd="@dimen/my_adds_recycler_view_layout_margin"
        android:layout_marginBottom="@dimen/my_adds_recycler_view_layout_margin"
        android:elevation="@dimen/my_adds_recycler_view_elevation"
        android:padding="@dimen/my_adds_recycler_view_layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>