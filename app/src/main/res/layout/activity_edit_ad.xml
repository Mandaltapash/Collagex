<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".activity.EditAdActivity">

    <!-- Modern AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_primary"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_ad_toolbar_height"
            android:background="@color/surface_primary"
            app:title="Edit Ad"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_menu_send" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/post_ad_margin_horizontal">

            <!-- District Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select District"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/districtSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_input_height"
                android:background="@drawable/bg_input_field_modern"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- College Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select College"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/post_ad_spacing"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/collegeSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_input_height"
                android:background="@drawable/bg_input_field_modern"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Image Upload Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Images (Click to change)"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_image_upload_height"
                android:background="@drawable/bg_image_upload_section"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/post_ad_spacing">

                <!-- Image Preview Container -->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageAd1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_input_field_modern"
                        app:srcCompat="@drawable/standard" />

                    <ImageView
                        android:id="@+id/imageAd2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_input_field_modern"
                        app:srcCompat="@drawable/standard" />

                    <ImageView
                        android:id="@+id/imageAd3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_input_field_modern"
                        app:srcCompat="@drawable/standard" />
                </LinearLayout>

            </LinearLayout>

            <!-- Category Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/categoriesSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_input_height"
                android:background="@drawable/bg_input_field_modern"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Ad Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Title"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/post_ad_spacing"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_input_height"
                android:background="@drawable/bg_input_field_modern"
                android:hint="Enter ad title"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price (â‚¹)"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/post_ad_spacing"
                android:layout_marginBottom="8dp" />

            <com.blackcat.currencyedittext.CurrencyEditText
                android:id="@+id/editValue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_input_height"
                android:background="@drawable/bg_input_field_modern"
                android:hint="Enter price"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/post_ad_spacing"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_input_field_modern"
                android:hint="Enter description"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="top|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/buttonSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_ad_button_height"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@drawable/bg_button_register_ad"
                android:text="Save Changes"
                android:textColor="@color/text_on_accent"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
