<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/custom_dialog_spinner_layout_padding">

    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="@dimen/custom_dialog_spinner_item_width"
        android:layout_height="@dimen/custom_dialog_spinner_item_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/custom_dialog_spinner_item_margin_start_end"
        android:layout_marginEnd="@dimen/custom_dialog_spinner_item_margin_start_end"/>
</androidx.constraintlayout.widget.ConstraintLayout>