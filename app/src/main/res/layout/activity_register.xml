<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.RegisterActivity"
        tools:viewBindingIgnore="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/register_logo_layout_width"
            android:layout_height="@dimen/register_logo_layout_height"
            android:layout_marginTop="@dimen/register_logo_layout_margin_top"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editRegisterName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_name_layout_height"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:background="@drawable/ic_background_plain_text"
            android:drawableEnd="@drawable/ic_name_24_gray"
            android:drawablePadding="@dimen/register_name_layout_drawable_padding"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/register_text_padding_start_end"
            android:paddingEnd="@dimen/register_text_padding_start_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/editRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_email_layout_height"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginTop="@dimen/register_email_layout_margin_top"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:background="@drawable/ic_background_plain_text"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/register_text_padding_start_end"
            android:paddingEnd="@dimen/register_text_padding_start_end"
            android:drawableEnd="@drawable/ic_email_24_gray"
            android:hint="@string/e_mail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRegisterName" />

        <EditText
            android:id="@+id/editRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_password_layout_height"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginTop="@dimen/register_password_layout_margin_top"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:background="@drawable/ic_background_plain_text"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="@dimen/register_text_padding_start_end"
            android:paddingEnd="@dimen/register_text_padding_start_end"
            android:drawableEnd="@drawable/ic_password_24_gray"
            android:hint="@string/password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRegisterEmail" />

        <EditText
            android:id="@+id/editRegisterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_confirm_password_layout_height"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginTop="@dimen/register_confirm_password_layout_margin_top"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:background="@drawable/ic_background_plain_text"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="@dimen/register_text_padding_start_end"
            android:paddingEnd="@dimen/register_text_padding_start_end"
            android:drawableEnd="@drawable/ic_password_24_gray"
            android:hint="@string/confirm_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRegisterPassword" />

        <Spinner
            android:id="@+id/spinnerCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:background="@drawable/ic_background_plain_text"
            android:paddingStart="@dimen/register_text_padding_start_end"
            android:paddingEnd="@dimen/register_text_padding_start_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRegisterConfirmPassword" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_button_layout_height"
            android:layout_marginStart="@dimen/register_layout_margin_start_end"
            android:layout_marginTop="@dimen/register_button_layout_margin_top"
            android:layout_marginEnd="@dimen/register_layout_margin_start_end"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCollege"
            android:background="@drawable/ic_background_plain_text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textSigninNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textColor="@color/custom_accent"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>